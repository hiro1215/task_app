<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
<% end %>
 
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>終日</th>
          <th>スケジュール更新日時</th>
          <th>確認</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
 
      <tbody>
        <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.id %></td>
            <td><%= schedule.title %></td>
            <td><%= schedule.startdate.to_fs(:datetime_jp) %></td>
            <td><%= schedule.enddate.to_fs(:datetime_jp) %></td>
            <td><%=if schedule.allday == true
                  "◯"
                else
                  "×"
                end  %>
            </td>
            <td><%= schedule.updated_at.to_fs(:datetime_jp) %></td>
            <td>
            <%= link_to "参照",schedule %>
            </td>
            <td>
            <%= link_to "編集", [:edit,schedule] %>
            </td>
            <td>
            <%= link_to "削除",schedule,data: {turbo_method: :delete}, turbo_confirm: "本当に削除しますか？" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
 
    <p><%= link_to "ユーザー新規登録", :new_schedule %></p>